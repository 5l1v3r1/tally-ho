<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{{ getOr .Properties "name" "some post" }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="{{ .BaseURL }}public/styles.css" />
    <link rel="stylesheet" href="{{ .BaseURL }}public/print.css" media="print" />
    <link rel="alternate" type="application/rss+xml" title="feed" href="/weblog/feed.xml" />

    <meta property="og:type" content="website" />
    <meta property="og:title" content="{{ getOr .Properties "name" "some post" }}" />
    <meta property="og:url" content="{{ mustGet .Properties "url" }}" />
    <!-- <meta property="og:description" content="{{ content .Properties }}" /> -->

  </head>
  <body>
    <nav>
      <span>
        <a href="{{ .PageURL }}">â†Ÿ {{ mustGet .Properties "hx-page" }}</a>
      </span>
    </nav>

    {{ with .Properties }}
      <article class="h-entry">
        <header>
          <a class="permalink u-url" title="{{ mustGet . "published" }}" href="{{ mustGet . "url" }}">&#x2020;</a>
          <h1 class="p-name">{{ getOr . "name" "" }}</h1>
          <time class="dt-published" datetime="{{ mustGet . "published" }}" pubdate="pubdate">{{ mustGet . "published" }}</time>
          <a rel="author" class="p-author h-card" href="{{ $.Meta.AuthorURL }}">{{ $.Meta.AuthorName }}</a>
        </header>

        <div class="e-content">
          {{ template "content.gotmpl" . }}
        </div>
      </article>
    {{ end }}

    <ul>
    {{ range .Reactions }}
      {{ if has .Properties "like-of" }}
        <li>Liked by <a href="{{ .Subject }}">
          {{ if has .Properties "author" }}
            {{ mustGet .Properties "author" }}
          {{ else }}
            {{ .Subject }}
          {{ end }}
        </a></li>
      {{ end }}
    {{ end }}
    </ul>

    {{ . }}
  </body>
</html>
